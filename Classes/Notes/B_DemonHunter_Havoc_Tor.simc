# Demon Hunter Havoc
# December 7, 2020

# Executed every time the actor is available.
actions=variable,name=blade_dance,value=talent.first_blood.enabled|spell_targets.blade_dance1>=(3-(talent.trail_of_ruin.enabled+buff.metamorphosis.up))|runeforge.chaos_theory&buff.chaos_theory.down
actions+=/variable,name=pooling_for_meta,value=!talent.demonic.enabled&cooldown.metamorphosis.remains<6&fury.deficit>30
actions+=/variable,name=pooling_for_blade_dance,value=variable.blade_dance&(fury<75-talent.first_blood.enabled*20)
actions+=/variable,name=pooling_for_eye_beam,value=talent.demonic.enabled&!talent.blind_fury.enabled&cooldown.eye_beam.remains<(gcd.max*2)&fury.deficit>20
actions+=/variable,name=waiting_for_essence_break,value=talent.essence_break.enabled&!variable.pooling_for_blade_dance&!variable.pooling_for_meta&cooldown.essence_break.up
actions+=/variable,name=waiting_for_momentum,value=talent.momentum.enabled&!buff.momentum.up
actions+=/variable,name=enemy_close,value=target.is_enemy&target.within6
actions+=/variable,name=use_fel_rush,value=false
actions+=/variable,name=significant_fight,value=false
actions+=/variable,name=significant_fight,value=true,if=solo&time>=4&target.time_to_die>=14&target.health_pct<=90
actions+=/variable,name=significant_fight,value=true,if=in_pvp&target.is_player&target.health_pct>=60
actions+=/variable,name=significant_fight,value=true,if=(raid|group)&target.exists&target.is_boss
# interrupts and CC
actions+=/disrupt
actions+=/fel_eruption,if=torghast&target.is_enemy&(debuff.casting.remains>cooldown.disrupt.remains+0.35|(debuff.casting.remains&!action.disrupt.in_range))
actions+=/fel_eruption,if=in_pvp&target.is_player&(debuff.casting.remains>cooldown.disrupt.remains+0.35|(debuff.casting.remains&!action.disrupt.in_range))
actions+=/chaos_nova,if=torghast&target.is_enemy&target.within7&(debuff.casting.remains>cooldown.disrupt.remains+0.35|(debuff.casting.remains&!action.disrupt.in_range))&debuff.casting.remains>cooldown.fel_eruption.remains+0.35
actions+=/chaos_nova,if=in_pvp&target.is_player&target.within7&(debuff.casting.remains>cooldown.disrupt.remains+0.35|(debuff.casting.remains&!action.disrupt.in_range))&debuff.casting.remains>cooldown.fel_eruption.remains+0.35
actions+=/eye_of_leotheras,if=target.is_player_caster&variable.enemy_close
# defensive
actions+=/consume_magic
actions+=/reverse_magic
actions+=/blur,if=health.pct<50&incoming_physical_5s>health.max*0.30
actions+=/darkness,if=combat&target.is_enemy&incoming_physical_5s>=0.2*health.max
# other stuff
actions+=/call_action_list,name=cooldown
actions+=/throw_glaive,if=buff.fel_bombardment.stack=5&(buff.immolation_aura.up|!buff.metamorphosis.up)
actions+=/call_action_list,name=essence_break,if=talent.essence_break.enabled&(variable.waiting_for_essence_break|debuff.essence_break.up)
actions+=/run_action_list,name=demonic,if=talent.demonic.enabled
actions+=/run_action_list,name=normal

actions.cooldown=metamorphosis,if=!(talent.demonic.enabled|variable.pooling_for_meta)&cooldown.eye_beam.remains>20&(!covenant.venthyr.enabled|!dot.sinful_brand.ticking)|fight_remains<25
actions.cooldown+=/metamorphosis,if=talent.demonic.enabled&(cooldown.eye_beam.remains>20&(!variable.blade_dance|cooldown.blade_dance.remains>gcd.max))&(!covenant.venthyr.enabled|!dot.sinful_brand.ticking)
actions.cooldown+=/sinful_brand,if=!dot.sinful_brand.ticking
actions.cooldown+=/the_hunt,if=!talent.demonic.enabled&!variable.waiting_for_momentum|buff.furious_gaze.up
actions.cooldown+=/fodder_to_the_flame
actions.cooldown+=/elysian_decree,if=(active_enemies>desired_targets|raid_event.adds.in>30)
actions.cooldown+=/potion,if=buff.metamorphosis.remains>25|fight_remains<60
# Default fallback for usable items.
actions.cooldown+=/use_items,if=buff.metamorphosis.up
actions.cooldown+=/elysian_decree,if=variable.enemy_close

actions.demonic=fel_rush,if=variable.use_fel_rush&(talent.unbound_chaos.enabled&buff.unbound_chaos.up)&(charges=2|(raid_event.movement.in>10&raid_event.adds.in>10))
actions.demonic+=/death_sweep,if=variable.blade_dance
actions.demonic+=/glaive_tempest,if=variable.enemy_close&(active_enemies>desired_targets|raid_event.adds.in>10)
actions.demonic+=/throw_glaive,if=conduit.serrated_glaive.enabled&cooldown.eye_beam.remains<6&!buff.metamorphosis.up&!debuff.exposed_wound.up
actions.demonic+=/eye_beam,if=raid_event.adds.up|raid_event.adds.in>25
actions.demonic+=/blade_dance,if=variable.enemy_close&variable.blade_dance&!cooldown.metamorphosis.ready&(cooldown.eye_beam.remains>5|(raid_event.adds.in>cooldown&raid_event.adds.in<25))
actions.demonic+=/immolation_aura
actions.demonic+=/annihilation,if=!variable.pooling_for_blade_dance
actions.demonic+=/felblade,if=fury.deficit>=40
actions.demonic+=/chaos_strike,if=!variable.pooling_for_blade_dance&!variable.pooling_for_eye_beam
actions.demonic+=/fel_rush,if=variable.use_fel_rush&talent.demon_blades.enabled&!cooldown.eye_beam.ready&(charges=2|(raid_event.movement.in>10&raid_event.adds.in>10))
actions.demonic+=/demons_bite,cycle_targets=1,if=runeforge.burning_wound&debuff.burning_wound.remains<4
actions.demonic+=/demons_bite
actions.demonic+=/throw_glaive,if=buff.out_of_range.up
actions.demonic+=/fel_rush,if=variable.use_fel_rush&target.distance>15|buff.out_of_range.up
actions.demonic+=/vengeful_retreat,if=!variable.enemy_close&is_rooted
actions.demonic+=/throw_glaive,if=talent.demon_blades.enabled
actions.normal+=/throw_glaive

actions.essence_break=essence_break,if=fury>=80&(cooldown.blade_dance.ready|!variable.blade_dance)
actions.essence_break+=/death_sweep,if=variable.blade_dance&debuff.essence_break.up
actions.essence_break+=/blade_dance,if=variable.blade_dance&debuff.essence_break.up&variable.enemy_close
actions.essence_break+=/annihilation,if=debuff.essence_break.up
actions.essence_break+=/chaos_strike,if=debuff.essence_break.up

actions.normal=vengeful_retreat,if=talent.momentum.enabled&buff.prepared.down&time>1&!variable.enemy_close&is_rooted
actions.normal+=/fel_rush,if=variable.use_fel_rush&(variable.waiting_for_momentum|talent.unbound_chaos.enabled&buff.unbound_chaos.up)&(charges=2|(raid_event.movement.in>10&raid_event.adds.in>10))
actions.normal+=/fel_barrage,if=active_enemies>desired_targets|raid_event.adds.in>30
actions.normal+=/death_sweep,if=variable.blade_dance
actions.normal+=/immolation_aura,if=variable.enemy_close
actions.normal+=/glaive_tempest,if=variable.enemy_close&(!variable.waiting_for_momentum&(active_enemies>desired_targets|raid_event.adds.in>10))
actions.normal+=/throw_glaive,if=conduit.serrated_glaive.enabled&cooldown.eye_beam.remains<6&!buff.metamorphosis.up&!debuff.exposed_wound.up
actions.normal+=/eye_beam,if=!variable.waiting_for_momentum&(active_enemies>desired_targets|raid_event.adds.in>15)&variable.enemy_close&!target.moving
actions.normal+=/blade_dance,if=variable.blade_dance&variable.enemy_close
actions.normal+=/felblade,if=fury.deficit>=40
actions.normal+=/annihilation,if=(talent.demon_blades.enabled|!variable.waiting_for_momentum|fury.deficit<30|buff.metamorphosis.remains<5)&!variable.pooling_for_blade_dance&!variable.waiting_for_essence_break
actions.normal+=/chaos_strike,if=(talent.demon_blades.enabled|!variable.waiting_for_momentum|fury.deficit<30)&!variable.pooling_for_meta&!variable.pooling_for_blade_dance&!variable.waiting_for_essence_break
actions.normal+=/eye_beam,if=talent.blind_fury.enabled&raid_event.adds.in>cooldown&variable.enemy_close&!target.moving
actions.normal+=/demons_bite,cycle_targets=1,if=runeforge.burning_wound&debuff.burning_wound.remains<4
actions.normal+=/demons_bite
actions.normal+=/fel_rush,if=variable.use_fel_rush&!talent.momentum.enabled&raid_event.movement.in>charges*10&talent.demon_blades.enabled
actions.normal+=/felblade,if=target.distance>15|buff.out_of_range.up
actions.normal+=/fel_rush,if=variable.use_fel_rush&(target.distance>15|(buff.out_of_range.up&!talent.momentum.enabled))
actions.normal+=/vengeful_retreat,if=!variable.enemy_close&is_rooted
actions.normal+=/throw_glaive,if=talent.demon_blades.enabled
actions.normal+=/throw_glaive